FROM golang:1.23.2 AS builder

WORKDIR /app

COPY ./uploader/go.mod ./uploader/go.sum .

RUN go mod download

COPY ./uploader .

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /app/main ./cmd


######################### STAGE 2 #########################
FROM alpine:latest

WORKDIR /root/

COPY --from=builder /app/main .

EXPOSE 8081

CMD ["./main"]