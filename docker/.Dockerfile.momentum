FROM golang:1.23.2 AS builder

WORKDIR /app

COPY ./momentum/go.mod ./momentum/go.sum ./momentum/

COPY ./go-core /app/go-core

WORKDIR /app/momentum

RUN go mod download

COPY ./momentum /app/momentum

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /app/main ./cmd/worker.go

## Stage 2: Create a minimal runtime image
FROM alpine:latest

WORKDIR /root/

COPY --from=builder /app/main .

CMD ["./main"]
